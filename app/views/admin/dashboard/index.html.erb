<h2>Listagem  de <%= @orders.count %> pagamento(s)</h2>
<hr/>
<table class="table">
  <thead>
    <tr>
      <th width="200">Operação</th>
      <th width="150">Devedor</th>
      <th width="150">Endereço</th>
      <th width="150">Preço</th>
    </tr>
  </thead>
  <tbody>
  	<% @orders.each do |o| %>
    <tr>
      <td><p><strong><%= o.tipo.capitalize.gsub('_', '/') %></strong></br><small><%= o.operation.capitalize.gsub('_', ' ')   %></small>

          <% if !o.protocolo.blank? %>
            </br><small>Prot: <%=o.protocolo%></small>
          <% end %>
          </br>
          <span class="created-at"><%= "há #{time_ago_in_words(o.created_at)}" %><small> - <%=o.created_at.strftime("%d/%m/%y %H:%M:%S") %></small></span>
      </p></td>
      <td><p><span class="icon-user"></span> <%= o.name %>
          </br><small>CPF: <%=o.cpf%></small>
        <% if !o.cid.blank? %>
          </br><small>CID / CIM: <%= o.cid %></small>
        <% end %>
        <% if !o.email.blank? %>
          </br><small><%=o.email %></small>
        <% end %>
        <% if !o.capitulo.blank? %>
          </br><small>Capítulo / Loja: <%=o.capitulo %></small>
        <% end %>
        <% if !o.data_iniciacao.blank? %>
          </br><small>Iniciação: <%=o.data_iniciacao.strftime("%d/%m/%y") %></small>
        <% end %>
        <% if !o.data_elevacao.blank? %>
          </br><small>Elevação: <%=o.data_elevacao.strftime("%d/%m/%y") %></small>
        <% end %>
        <% if !o.convento.blank? %>
          </br><small>Convento: <%=o.convento%></small>
        <% end %>
        <% if !o.data_investidura.blank? %>
          </br><small>Investidura: <%=o.data_investidura.strftime("%d/%m/%y") %></small>
        <% end %>
          </p>
      </td>
      <td><p><span class="icon-location"></span><%= o.address %></p></td>
      <td>
        <% if o.tipo == "demolay" %>
          <p><strong><%= humanized_money_with_symbol o.price %></strong></p>
        <% else %>
          <p><strong><%= humanized_money_with_symbol o.price %></strong><br/> 
            <%= o.qtd_membro%> membro<%= o.qtd_membro > 1 ? "s":"" %></p>
        <% end %>
      </td>        
    </tr>
	<% end %>
  </tbody>
</table>